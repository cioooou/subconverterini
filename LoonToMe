# Loon 全局配置-中文策略组

[General]

# IPv6
ipv6 = false

# udp
allow-udp-proxy = true

# 跳过某个域名或者IP段
skip-proxy = 10.0.0.0/8,127.0.0.0/8,169.254.0.0/16,192.0.2.0/24,192.168.0.0/16,198.51.100.0/24,224.0.0.0/4,*.local,localhostlocal
bypass-tun = 10.0.0.0/8,127.0.0.0/8,169.254.0.0/16,192.0.2.0/24,192.168.0.0/16,198.51.100.0/24,224.0.0.0/4

# Real-Ip
real-ip = *.iCloud.com,*.apple.com

# DNS 服务器
dns-server = 8.8.8.8,223.5.5.5,119.29.29.29

# Wi-Fi 访问
allow-wifi-access = false
wifi-access-http-port = 7222
wifi-access-socket5-port = 7221

# 代理测速 URL
proxy-test-url = http://www.gstatic.com/generate_204
# > 测速超时 (s)
test-timeout = 3

# 解析器
resource-parser = https://raw.githubusercontent.com/Peng-YM/Sub-Store/master/scripts/sub-store-parser.js

[Host]

host = 127.0.0.1

[Remote Proxy]
机场订阅 = https://suo.yt/W7BkpTS

# 节点筛选
[Remote Filter]
手动筛选 = NameRegex, FilterKey = "^(?!.*(网址|订阅|到期|剩余流量|时间|官网|产品|加群|免费|本站|CCCAT|IPLC|网站|代理|下载|客服|私聊|推荐|公益|过期|UnblockMusic|有效期|无效|注册|回国|体验|广告位|请|群|Shadowsocks))(.*)"
国际媒体 = NameRegex, FilterKey = "(?i)(港|HK|Hong)"
香港 = NameRegex, FilterKey = "(?i)(港|HK|Hong)"
新加坡 = NameRegex, FilterKey = "(?i)(新加坡|坡|狮城|SG|Singapore)"
台湾 = NameRegex, FilterKey = "(?i)(台|TW|Tai)"
美国 = NameRegex, FilterKey = "(?i)(美|波特兰|达拉斯|俄勒冈|凤凰城|费利蒙|硅谷|拉斯维加斯|洛杉矶|圣何塞|圣克拉拉|西雅图|芝加哥|US|United States)"
日本 = NameRegex, FilterKey = "(?i)(日本|川日|东京|大阪|泉日|埼玉|沪日|深日|JP|Japan)"

# 本地节点
[Proxy]

直接连接 = DIRECT

